{
  "name": "syncy",
  "description": "One-way synchronization of directories with glob",
  "version": "1.0.1",
  "license": "MIT",
  "author": {
    "name": "Denis Malinochkin",
    "url": "canonium.com"
  },
  "repository": "mrmlnc/syncy",
  "engines": {
    "node": ">= 0.10.0"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "cp-file": "^3.1.0",
    "glob-parent": "^2.0.0",
    "globby": "^4.0.0",
    "mkdirp": "^0.5.1",
    "object-assign": "^4.0.1",
    "promise": "^7.1.1",
    "rimraf": "^2.5.2",
    "through2": "^2.0.1"
  },
  "devDependencies": {
    "mocha": "^2.4.5",
    "xo": "^0.14.0"
  },
  "scripts": {
    "test": "rimraf .tmp && xo && mocha --timeout=25000"
  },
  "files": [
    "lib",
    "index.js"
  ],
  "keywords": [
    "directory",
    "dir",
    "files",
    "synchronization",
    "sync",
    "copy",
    "update"
  ],
  "xo": {
    "space": 2,
    "rules": {
      "indent": [2, 2, { "SwitchCase": 1 }],
      "arrow-parens": [2, "always"],
      "object-curly-spacing": [2, "always"],
      "babel/object-curly-spacing": 0,
      "space-before-function-paren": [2, "never"]
    },
    "envs": [
      "node",
      "mocha"
    ]
  }
}
